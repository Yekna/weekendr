generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Genre {
  ROCK
  METAL
  HIPHOP
}

model Party {
  id      Int      @id @default(autoincrement())
  name    String
  tags    String?
  genre   Genre
  picture String
  date    DateTime
  Venue   Venue    @relation(fields: [venueId], references: [id])
  venueId String
}

model Owner {
  id          Int      @id @default(autoincrement())
  username    String
  password    String
  taxPictures String[]
  venues      Venue[]
  verified    Boolean  @default(false)
  slug        String?
}

model Venue {
  id           String  @id
  name         String  @unique
  picture      String?
  address      String  @unique
  parties      Party[]
  phone        String?
  owner        Owner   @relation(fields: [ownerId], references: [id])
  ownerId      Int
  rating       Int
  website      String?
  ratingsCount Int
  slug         String?
  followers    Int     @default(0)
  posts        Int     @default(0)
  about        String?
  lat          Float?
  lng          Float?

  @@index([lat, lng], name: "venue_location")
}
